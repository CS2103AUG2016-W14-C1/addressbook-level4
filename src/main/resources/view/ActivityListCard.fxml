<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane HBox.hgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <children>
                <VBox alignment="CENTER_LEFT" maxHeight="150.0" minHeight="30.0" prefHeight="40.0" GridPane.columnIndex="0">
                    <stylesheets>
                        <URL value="@DarkTheme.css" />
                        <URL value="@Extensions.css" />
                    </stylesheets>
                    <padding>
                        <Insets bottom="5" left="15" right="5" top="5" />
                    </padding>

                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <children>
                                <HBox>
                                    <Label fx:id="id" styleClass="cell_big_label" />
                                    <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
                                </HBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            <VBox prefHeight="34.0" prefWidth="150.0" GridPane.columnIndex="1">
               <children>
                          <Label fx:id="dateTime" styleClass="cell_small_label" text="\$dateTime" />
                          <Label fx:id="endDateTime" styleClass="cell_small_label" text="\$endDateTime" />
               </children>
            </VBox>
            <HBox prefHeight="34.0" prefWidth="100.0" GridPane.columnIndex="2">
               <children>
                  <Label fx:id="status" styleClass="cell_small_label" text="\$status" translateX="10.0" translateY="12.0" />
               </children>
            </HBox>
            </children>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </children>
</HBox>
